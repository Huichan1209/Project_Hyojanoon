    <!-- 하단바 -->




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hyojanoonOrange"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/study_Linear_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/study_icon_setting"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/studyicon" />

            <ImageView
                android:src="@drawable/text_study"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar"
            android:layout_marginRight="30dp"/>


        <LinearLayout
            android:id="@+id/camera_Linear_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="30dp">


            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/camera_icon_setting"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/cameraicon" />

            <ImageView
                android:src="@drawable/text_insik"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:id="@+id/setting_Linear_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/setting_icon_setting"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/settingicon" />

            <ImageView
                android:id="@+id/setting_text"
                android:src="@drawable/text_setting"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>