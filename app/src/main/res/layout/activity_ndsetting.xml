        android:layout_height="19dp"
        android:src="@drawable/ttsthrehwhwjf_text" />

    <ImageView
        android:id="@+id/tts_speed_setBtn_1"
        android:layout_below="@id/tts_threhwhwjf_text"
        android:layout_marginTop="26.3dp"
        android:layout_marginLeft="35dp"
        android:layout_width="95.3dp"
        android:layout_height="28dp"
        android:src="@drawable/qkfma_white"/>


    <ImageView
        android:id="@+id/tts_speed_setBtn_2"
        android:layout_width="95.3dp"
