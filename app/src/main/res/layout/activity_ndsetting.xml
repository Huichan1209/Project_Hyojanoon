    <ImageView
        android:id="@+id/changemode_text"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="57dp"
        android:layout_below="@id/tts_speed_setBtn_2"
        android:layout_width="126dp"
        android:layout_height="19dp"
        android:src="@drawable/ahemqusghks_text" />

    <ImageView
        android:id="@+id/mode_setBtn_1"
        android:layout_below="@id/changemode_text"
