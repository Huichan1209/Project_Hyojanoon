<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondLearnActivity"
    android:orientation="vertical"
    android:background="@color/black"
    android:weightSum="6"
    android:id="@+id/secondLearnLinear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|top">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학습모드(중성)"
            android:textSize="50dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/tvChar_sec"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:paddingTop="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/second_learn_braille1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/second_learn_braille2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/second_learn_braille3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <ImageView
                android:id="@+id/second_learn_braille4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/second_learn_braille5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/second_learn_braille6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/empty_braille"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>