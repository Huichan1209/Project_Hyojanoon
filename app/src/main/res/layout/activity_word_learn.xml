<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordLearnActivity"
    android:orientation="vertical"
    android:background="@color/black"
    android:weightSum="6"
    android:id="@+id/wordLearnLinear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal|top">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학습모드(약자)"
            android:textSize="50dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/tvChar_word"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:paddingTop="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="7dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/word_learn_braille1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/word_learn_braille2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/word_learn_braille3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="3dp">

                <ImageView
                    android:id="@+id/word_learn_braille4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/word_learn_braille5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

                <ImageView
                    android:id="@+id/word_learn_braille6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/empty_braille"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

         </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/word_learn_braille7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

                <ImageView
                    android:id="@+id/word_learn_braille8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

                <ImageView
                    android:id="@+id/word_learn_braille9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/word_learn_braille10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

                <ImageView
                    android:id="@+id/word_learn_braille11"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

                <ImageView
                    android:id="@+id/word_learn_braille12"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/empty_braille" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>