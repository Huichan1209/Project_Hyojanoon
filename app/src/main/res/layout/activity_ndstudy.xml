<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NDStudyActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/nd_study_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34.3dp"
        android:layout_marginTop="50.7dp"
        android:src="@drawable/text_studymode"/>

    <EditText
        android:id="@+id/nd_study_editText"
        android:layout_below="@id/nd_study_title"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="ㄱ"
        android:maxLength="1"
        android:textSize="30sp"/>

    <ImageView
        android:layout_below="@id/nd_study_editText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/message_inputtext"
        android:layout_marginTop="30dp"/>

    <!-- 점자 -->

    <LinearLayout
        android:layout_below="@id/nd_study_editText"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/nd_dot1_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/nd_emptydot"/>

        <ImageView
            android:id="@+id/nd_dot1_2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/nd_emptydot"/>

        <ImageView
            android:id="@+id/nd_dot1_3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nd_first_dots_right_Linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/nd_dot1_4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot1_5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot1_6"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/study_bar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar2"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/nd_dot2_1"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot2_2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot2_3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nd_second_dots_right_Linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/nd_dot2_4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot2_5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot2_6"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/study_bar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar2"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/nd_dot3_1"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot3_2"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot3_3"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nd_third_dots_right_Linear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nd_dot3_4"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot3_5"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

            <ImageView
                android:id="@+id/nd_dot3_6"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/nd_emptydot"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 하단바 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.3dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hyojanoonOrange"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/study_Linear_study"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/study_icon_study"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/studyicon" />

            <ImageView
                android:id="@+id/study_text"
                android:src="@drawable/text_study"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar"
            android:layout_marginRight="30dp"/>


        <LinearLayout
            android:id="@+id/camera_Linear_study"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginRight="30dp">


            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/camera_icon_study"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/cameraicon" />

            <ImageView
                android:src="@drawable/text_insik"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bar"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:id="@+id/setting_Linear_study"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">


            <ImageView
                android:layout_marginTop="3dp"
                android:id="@+id/setting_icon_study"
                android:layout_width="16.7dp"
                android:layout_height="24dp"
                android:src="@drawable/settingicon" />

            <ImageView
                android:src="@drawable/text_setting"
                android:layout_width="16dp"
                android:layout_height="8.7dp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>